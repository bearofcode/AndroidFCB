<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.zhangxiong.fcb.ForgetActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#e0000000">

        <ImageButton
            android:id="@+id/myback"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:background="@mipmap/myleft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:textSize="22sp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:hint="11位手机号"
        android:singleLine="true"
        android:inputType="phone"
        android:backgroundTint="#000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_verlidation"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="验证码"
            android:singleLine="true"
            android:backgroundTint="#000"/>

        <Button
            android:id="@+id/bt_getverli"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_regist"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/et_verlidation"
            android:layout_toEndOf="@+id/et_verlidation"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="设置6位以上密码"
        android:singleLine="true"
        android:inputType="textPassword"
        android:backgroundTint="#000"/>
    <EditText
        android:id="@+id/et_surepass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="确认密码"
        android:singleLine="true"
        android:inputType="textPassword"
        android:backgroundTint="#000"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="重置密码"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:id="@+id/bt_reset"
        android:background="@drawable/btn_regist"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="15sp"
        android:textColor="#0099ff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="115dp"
        android:id="@+id/tv_regist"
        android:textStyle="bold"/>
</LinearLayout>
