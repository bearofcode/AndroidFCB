<?xml version="1.0" encoding="utf-8"?>
<!--设置edittext光标样式android:textCursorDrawable="@null"-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangxiong.fcb.LoginActivity"
    android:background="@mipmap/fcbsecond">
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_account"
        tools:layout_editor_absoluteY="329dp"
        tools:layout_editor_absoluteX="87dp"
        android:backgroundTint="#fffffF"
        android:hint="用户名"
        android:textColorHint="#fffffF"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_marginBottom="167dp"
        android:singleLine="true"
        android:inputType="phone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="374dp"
        tools:layout_editor_absoluteX="87dp"
        android:hint="密码"
        android:backgroundTint="#fff"
        android:textColorHint="#fffffF"
        android:textColor="#fffffF"
        android:textSize="18sp"
        android:id="@+id/et_pass"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/et_account"
        android:layout_alignStart="@+id/et_account"
        android:singleLine="true"
        android:inputType="textPassword"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textSize="15sp"
        android:buttonTint="#fFF"
        android:textColor="#fFF"
        android:id="@+id/remember"
        android:layout_below="@+id/et_pass"
        android:layout_alignStart="@+id/bt_login"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码/注册"
        android:textColor="#fffffF"
        android:id="@+id/tv_forget"
        tools:layout_editor_absoluteY="468dp"
        tools:layout_editor_absoluteX="141dp"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/remember"
        android:layout_alignBottom="@+id/remember"
        android:layout_alignEnd="@+id/bt_login"/>
    <Button
        android:layout_width="210dp"
        android:layout_height="42dp"
        android:background="@drawable/btn_login"
        android:text="登      录"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="414dp"
        tools:layout_editor_absoluteX="87dp"
        android:id="@+id/bt_login"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/et_pass"
        android:layout_alignStart="@+id/et_pass"/>

</RelativeLayout>
