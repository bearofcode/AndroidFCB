<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#C0C0C0"
                      android:centerColor="#00C0C0C0"
                      android:endColor="#C0C0C0"
                      android:angle="0"/>
            <stroke android:width="0dip" android:color="#C0C0C0"/>
            <corners android:radius="15dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp"
                     android:bottom="10dp"/>

        </shape>

    </item>
    <item>
        <shape>
            <gradient android:startColor="#00ffffff" android:endColor="#00000000"
                      android:angle="90"/>

            <stroke android:width="1dip" android:color="#f0ffffff"/>
            <corners android:radius="15dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp"
                     android:bottom="10dp"/>

        </shape>

    </item>

    </selector>